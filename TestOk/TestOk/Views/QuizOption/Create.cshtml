@model DataAccess.DTO.QuizOptionDto

@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginCollectionItem($"{ViewData["prefix"]}.options"))
{
	<div class="container quizOptionRow">
		<div class="row">
			<div class="col-md-11">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
				<div class="col-md-12 text-left">
					<div class="form-check">
						<input asp-for="IsCorrectAnswer" type="checkbox" class="form-check-input" />
						<label asp-for="IsCorrectAnswer" class="form-check-label">
							Correct answer
						</label>
					</div>
				</div>
			</div>
		
			<div class="col-md-1">
				<button class="btn btn-danger deleteQuizOption">
					X
				</button>
			</div>
		
		</div>
	</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}